<h2>Edit Activity Reminder Settings</h2>

<div ng-app="stayingSharp.reminderSettings">
  <%= simple_form_for(@activity_reminder,  url: my_activity_reminder_settings_path, method: :patch,
   html: { "ng-controller": "FormController as vm",
    "ng-init": "vm.setReminders(#{ @activity_reminder.id? }, #{ !@activity_reminder.empty? })" }) do |form| %>
    <%= render 'activity_reminder_fields', form: form, activity_reminder: @activity_reminder %>

    <%= form.button :submit%>
  <% end %>
</div>
