{
  "globals": {
    "appRequire": true,
    "appPath": true,
    "testApp": true,
    "Promise": true,
    "expect": true,
    "request": true,
    "Helpers": true,
    "Authentication": true,
    "factory": true
  },
  "env": {
    "node": true,
    "mocha": true
  },
  "ecmaFeatures": {
    "arrowFunctions": true,
    "blockBindings": true,
    "classes": true,
    "destructuring": true,
    "forOf": true,
    "jsx": true,
    "modules": true,
    "templateStrings": true
  },
  "rules": {
    "comma-dangle": [2, "always-multiline"],
    "indent": [2, 2],
    "semi": [2, "always"],
    "quotes": [2, "single"],
    "eqeqeq": [2, "smart"],
    "no-mixed-requires": [0, false],
    "eol-last": 2,
    "func-style": [2, "expression"],
    "no-trailing-spaces": 2,
    "no-multiple-empty-lines": [2, {"max": 1}],
    "no-mixed-spaces-and-tabs": [2, false],
    "object-curly-spacing": [2, "always"],
    "strict": [2, "global"],
    "no-spaced-func": 2,
    "space-in-parens": [2, "never"],
    "camelcase": 1,
    "no-underscore-dangle": 0,
    "max-len": [2, 80, 4]
  }
}
